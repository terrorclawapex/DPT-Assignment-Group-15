<SplashScreen>:
	GridLayout:
        rows: 2
        MDToolbar:
            id: toolbar
            title: "Union Scholarship Application"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            right_action_items: [['dots-vertical', lambda x: ""]]
		GridLayout:
            rows: 2
            cols: 3
            orientation: 'vertical'
            padding: [40,200,40,200]
            Button:
                text:"View Scholarship Applicants"
                on_release:
                    app.manage_screens("view_screen", "add")
                    app.change_screen("view_screen")
			Button:
                text:"Add Scholarship Applicants"
                on_release:
                    app.manage_screens("add_screen", "add")
                    app.change_screen("add_screen")
